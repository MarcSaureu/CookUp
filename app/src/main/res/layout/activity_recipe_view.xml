<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RecipeNameView"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/RecipeServingView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RecipeDishView"
                android:layout_width="196dp"
                android:layout_height="60dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/RecipeFoodView"
                android:layout_width="196dp"
                android:layout_height="60dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RecipeDescriptionView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ListView
                android:id="@+id/IngredientListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="263dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ListView
                android:id="@+id/PreparationListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>