<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/namedefault"
        android:key="@string/name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/name"
        android:maxLength="8"
        />

    <EditTextPreference
        android:defaultValue="false"
        android:key="@string/email"
        android:maxLength="30"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/email" />

    <EditTextPreference
        android:defaultValue="@string/addressInput"
        android:key="@string/address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/address"
        android:maxLength="30"
        />


    <SwitchPreference
        android:defaultValue="@string/locationdefault"
        android:key="@string/maps"
        android:title="Enable maps"
        android:singleLine="true"
        />

</PreferenceScreen>